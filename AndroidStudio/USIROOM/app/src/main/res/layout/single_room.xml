<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:src="@mipmap/mappausi"
            android:layout_marginBottom="405dp"
            android:layout_above="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal|top" />

    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/map_room"
        android:src="@mipmap/si003"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/status"
        android:textSize="16sp"
        android:id="@+id/single_event_room"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#536dfe"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom">

        <TextView
            android:layout_width="262dp"
            android:layout_height="234dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" Room 003"
            android:id="@+id/textView2"
            android:layout_gravity="left|center_vertical"
            android:textSize="30dp"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:textColor="@android:color/secondary_text_light" />

        <TextView
            android:layout_width="289dp"
            android:layout_height="220dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" First Floor \n Black Building"
            android:id="@+id/position_room"
            android:layout_gravity="center_vertical|right"
            android:paddingTop="20dp"
            android:textColor="@android:color/secondary_text_light"
            android:paddingLeft="130dp"
            android:longClickable="false"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="377dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" Projector: yes \n Capacity: 60 people "
            android:id="@+id/details"
            android:layout_gravity="left|bottom"
            android:textSize="20dp"
            android:paddingLeft="23dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/secondary_text_light"
            android:paddingBottom="180dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Next event: CSS on Tuesday"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="20dp"
            android:paddingLeft="27dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/secondary_text_light"
            android:paddingBottom="180dp" />
    </FrameLayout>


</RelativeLayout>

    <!--android:background="@mipmap/template2"-->