<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">



    <ImageView
        android:layout_marginTop="49dp"
        android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_height="250dp"
        android:id="@+id/mapblack_white"
        android:src="@mipmap/mappausi"
        android:gravity="center"
        android:onClick="openLink"
        android:clickable="true"
        android:layout_gravity="top|center_horizontal"
      />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/status"
        android:textSize="16sp"
        android:id="@+id/single_event_room"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#536dfe"
        android:layout_alignParentBottom="true" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/room_event"
            android:id="@+id/textView2"
            android:layout_gravity="left|center_vertical"
            android:textSize="30sp"
            android:paddingLeft="20dp"
            android:layout_below="@+id/mapblack_white"
            android:paddingTop="16dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/building_event"
            android:id="@+id/position_room"
            android:layout_gravity="center_vertical|right"
            android:textColor="@android:color/secondary_text_light"
            android:longClickable="false"
            android:layout_above="@+id/map_room"
            android:layout_below="@id/mapblack_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:gravity="center_horizontal|right"
            android:paddingRight="32dp" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
            <!--android:text="@string/room_specs"-->
            <!--android:id="@+id/details"-->
            <!--android:gravity="center_vertical"-->
            <!--android:textSize="20sp"-->
            <!--android:paddingLeft="23dp"-->
            <!--android:textColor="@android:color/secondary_text_light"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Next event: CSS on Tuesday"
            android:id="@+id/textView7"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="23dp"
            android:paddingTop="5dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_below="@id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:id="@+id/map_room"
        android:src="@mipmap/si006"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_above="@+id/single_event_room"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_above="@+id/map_room">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/room_specs"
            android:id="@+id/details"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:paddingLeft="23dp"
            android:textColor="@android:color/secondary_text_light"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </FrameLayout>

</RelativeLayout>

